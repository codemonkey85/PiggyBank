%h1 Delete OFX Configuration?
= styled_flash
%form{ method: 'POST', action: "/ofx/#{@ofx.ofx_id}" }
  %input{ type: 'hidden', name: '_method', value: 'DELETE' }
  %input{ type: 'hidden', name: '_token',  value: PiggyBank::App.token }
  %input{ type: 'hidden', name: 'version', value: @ofx.version }
  = haml :"ofx/as_dl"
  .buttons
    %button.btn.danger
      %span.icon.icon-trash
      %span.text Delete
    -# FUTURE: make this link do JS: history.back()
    %a.btn.secondary{ href: "/ofxs" }
      %span.icon.icon-close
      %span.text Cancel
