%h1 Delete Price?
= styled_flash
%form{
  method: 'POST',
  action: "/price/#{@price.price_id}"
}
  %input{
    type: 'hidden',
    name: '_method',
    value: 'DELETE'
  }
  %input{
    type: 'hidden',
    name: '_token',
    value: PiggyBank::App.token
  }
  %input{
    type: 'hidden',
    name: 'version',
    value: @price.version
  }
  = haml :"price/as_dl"
  .buttons
    %button.btn.danger
      %span.icon.icon-trash
      %span.text Delete
    -# FUTURE: make this link do JS: history.back()
    %a.btn.secondary(href="/prices")
      %span.icon.icon-close
      %span.text Cancel
