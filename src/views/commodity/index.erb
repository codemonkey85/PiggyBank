<h1>Commodities</h1>
<%= styled_flash %>
<div>
  <a>(href='/commodity') New Commodity </a>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Ticker</th>
      <th>Fraction</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @commodities.each do |commodity| %>
      <tr>
        <td>
          <a href="/commodity/<%= commodity.commodity_id %>">
            <%= commodity.name  %>
          </a>
        </td>
        <td>
          <%= commodity.description %>
        </td>
        <td>
          <%= commodity.type_string  %>
        </td>
        <td>
          <%= commodity.ticker %>
        </td>
        <td>
          <%= commodity.fraction %>
        </td>
        <td>
          <a class="btn primary" href="/commodity/<%= commodity.commodity_id %>?edit">
            <span class="icon icon-pencil"></span>
            <span class="sr-only">Edit </span>
          </a>
          <a class="btn danger" href="/commodity/<%= commodity.commodity_id %>?delete">
            <span class="icon icon-trash"></span>
            <span class="sr-only">Trash</span>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
