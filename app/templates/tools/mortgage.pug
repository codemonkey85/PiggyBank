extends layout

block content
  h1 Mortgage Amortization
  form
    label Loan Amount
      input(name='loan-amount' type='number' value='0.00' step='0.01')/
    label Interest Rate
      input(name='rate' type='number' value='0.00' step='0.01')/
    label # of Payments
      input(name='number' type='number' value='0')/
    label Payment Period
      select(name='period')
        option Monthly
    button Calculate

  if payments  
    h2 Payment Amount #{payment_amount}
    table
      thead
        tr
          th
          th Payment
          th Interest
          th Principal
          th Balance
      tbody
        each payment in payments
          tr 
            td #{payment.number}
            td #{payment.amount}
            td #{payment.interest}
            td #{payment.principal}
            td #{payment.balance}

